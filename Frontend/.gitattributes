# Handle line endings consistently
* text=auto

# Force LF for source code
*.js   text eol=lf
*.jsx  text eol=lf
*.ts   text eol=lf
*.tsx  text eol=lf
*.json text eol=lf
*.css  text eol=lf
*.scss text eol=lf
*.md   text eol=lf
*.html text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.gitignore text eol=lf

# Keep binary files untouched
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.ico  binary
*.svg  binary
*.woff binary
*.woff2 binary
*.ttf  binary
*.eot  binary
*.mp4  binary
*.mp3  binary
